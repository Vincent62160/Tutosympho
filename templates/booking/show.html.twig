{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1>Booking</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ booking.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ booking.email }}</td>
            </tr>
            <tr>
                <th>Mobile</th>
                <td>{{ booking.mobile }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ booking.date ? booking.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ booking.time ? booking.time|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Participant</th>
                <td>{{ booking.participant }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('booking_index') }}">back to list</a>

    <a href="{{ path('booking_edit', {'id': booking.id}) }}">edit</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
